<div class="m-3" >
  <div class="row">
    <div class="col-md-3">
      <div class="card" style="height: 85vh; overflow: scroll;">
        <div class="card-body">
          <h5 class="card-title">Logged in Users</h5>
          <hr>
          <% @logged_in_users.each do |u| %>
            <h6 class="card-subtitle mb-2 text-muted"><%= u.email %></h6>
          <% end %>
        </div>
      </div>
      <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn btn-outline-info btn-sm mt-2" %>
    </div>
    <div class="col-md-9">
      <div class="card" style="height: 85vh; overflow: scroll;">
        <div class="card-body">
          <h5 class="card-title">Messages</h5>
          <hr>
          <%= render @messages %>
        </div>
      </div>
    </div>
  </div>
</div>
<div>
  <div class="row">
    <div class="col-md-3">
    </div>
      <div class="col-md-9">
        <%= turbo_frame_tag "new_message" do %>
          <%= link_to "New Message", new_message_path, class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
